<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.mymapapp.HomeNavigationActivity"
    tools:showIn="@layout/app_bar_home_navigation">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"

android:background="#a9a9"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One time investment. Lifetime savings.
With reduced costs and improved technology, now is the time to go solar"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:padding="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/btnStart"
       android:background="@color/colorOrangeDark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:text="Get Started"/>
    <GridView
        android:numColumns="2"
        android:gravity="center"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:verticalSpacing="10dp"
        android:visibility="visible"
        android:paddingTop="10dp"

        android:paddingBottom="15dp"
        android:horizontalSpacing="8dp"
        android:layout_margin="5dp"

        />
    </LinearLayout>
</LinearLayout>
